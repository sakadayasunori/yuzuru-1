<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for :session, url: login_path, remote: true do |form| %>

      <div class="field form-group">
        <%= form.label :email, class: 'text-white' %>
        <%= form.text_field :email, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= form.label :password, class: 'text-white' %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= form.submit "ログイン",class: "btn btn-success",style: "margin: 30px auto;display:block;" %>
      </div>
    <% end %>
  </div>
</div>
