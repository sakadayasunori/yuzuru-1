<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @user, remote: true do |form| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field form-group">
        <%= form.label :name, class: 'text-white' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class="field form-group">
        <%= form.label :email, class: 'text-white' %>
        <%= form.text_field :email, class: 'form-control' %>
      </div>
      <div class="field form-group">
        <%= form.label :password, class: 'text-white' %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>
      <div class="field form-group">
        <%= form.label :password_confirmation, class: 'text-white'%>
        <%= form.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= form.submit "登録",class: "btn btn-success",style: "margin: 30px auto;display:block;" %>
      </div>
    <% end %>
  </div>
</div>
